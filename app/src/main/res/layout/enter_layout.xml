<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/im"
    android:layout_height="match_parent"
    android:layout_width="match_parent" >
    <View style="@style/line"/>
    <LinearLayout
        android:background="@drawable/bg_radius_sign"
        android:layout_height="72dp"
        android:layout_width="72dp"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="40dp"
        android:layout_gravity="center_horizontal">

    <ImageView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:src="@drawable/logo"
        />

</LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:background="#ffffff"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp">

        <!--线条描边-->
    <View
        android:background="#07a6e6"
        android:layout_height="1px"
        android:layout_width="fill_parent"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_height="48dp"
        android:layout_width="match_parent"
        android:gravity="center"
        android:focusable="true"
        android:background="#e0000000"
        android:focusableInTouchMode="true">

    <ImageView
        android:layout_height="30dp"
        android:layout_width="30dp"
        android:src="@drawable/ico_sign_01"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="10dp" />

    <EditText
        android:background="@null"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/username"
        android:textSize="15sp"
        android:maxLines="1"
        android:gravity="center_vertical"
        android:textColor="@android:color/darker_gray"
        android:textColorHint="@android:color/darker_gray"
        android:hint="用户名/邮箱号"/>

</LinearLayout>

    <View
        android:background="#d9d9d9"
        android:layout_height="1px"
        android:layout_width="fill_parent"
        android:layout_marginRight="2dp"
        android:layout_marginLeft="2dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_height="48dp"
            android:layout_width="match_parent"
            android:gravity="center"
            android:focusable="true"
            android:background="#e0000000"
            android:focusableInTouchMode="true">

    <ImageView
        android:layout_height="30dp"
        android:layout_width="30dp"
        android:src="@drawable/ico_sign_02"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="10dp"/>

    <EditText
        android:background="@null"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:id="@+id/password"
        android:textSize="15sp"
        android:maxLines="1"
        android:gravity="center_vertical"
        android:textColor="@android:color/darker_gray"
        android:textColorHint="@android:color/darker_gray"
        android:hint="密码"
        android:inputType="textPassword"/>

</LinearLayout>

</LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkbox"
            />
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="13sp"
        android:text="登录或注册则表示您同意"
        android:textColor="@android:color/darker_gray"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/service_message"
        android:textSize="13sp"
        android:text="《使用条款》"
        android:textColor="#63d065"
        android:paddingTop="18dp"
        android:paddingBottom="14dp"/>

</LinearLayout>

    <Button
        android:background="@drawable/bg_radius_sign_btn"
        android:layout_height="44dp"
        android:layout_width="match_parent"
        android:id="@+id/login"
        android:textSize="15sp"
        android:text="登 录"
        android:textColor="#ffffff"
        android:layout_marginTop="15dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"/>

    <Button
        android:layout_height="44dp"
        android:layout_width="match_parent"
        android:background="@drawable/bg_radius_sign_btn"
        android:padding="8dp"
        android:id="@+id/register"
        android:textSize="17sp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:text="注册"
        android:textColor="#ffffff"/>
    <Button
        android:background="@null"
        android:layout_height="44dp"
        android:layout_width="wrap_content"
        android:id="@+id/forget_password"
        android:textSize="13sp"
        android:text="忘记密码?"
        android:textColor="#EE2C2C"
        android:layout_gravity="right"
        android:layout_marginRight="42dp"
        android:paddingLeft="12dp"/>






</LinearLayout>