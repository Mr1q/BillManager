<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">




        <com.roughike.bottombar.BottomBar
            android:id="@+id/bottomBar2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:bb_activeTabColor="@android:color/white"
            app:bb_inActiveTabColor="@android:color/white"
            app:bb_tabXmlResource="@xml/bottombar_tab" />

        <LinearLayout
            android:layout_gravity="top"
            android:id="@+id/lay"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="类型："
                   android:layout_gravity="center"
                   android:textColor="@color/colorAccent"
                   android:layout_marginLeft="10dp"
                   android:textSize="20dp"/>
                <ImageView
                    android:layout_marginLeft="7dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/input_Image"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/input_Text"
                    android:text="其他"
                    android:layout_marginLeft="5dp"
                    android:textSize="20sp"
                    android:layout_gravity="center_vertical"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:maxLines="1"
                    android:id="@+id/edit_My"
                    android:visibility="gone"
                    android:hint="自定义类型"/>
            </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorAccent"
                        android:text="日期："
                        android:layout_gravity="center"
                        android:textSize="20dp"/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" 日 期"
                        android:layout_marginLeft="10dp"
                        android:background="@null"
                        android:textSize="15dp"
                        android:id="@+id/riqi_day"/>

                </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/input_Edit"
                    android:maxLines="1"
                    android:layout_width="0dp"
                    android:inputType="numberDecimal"
                    android:layout_weight="1"
                    android:hint="输入金额"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|right"/>
                <Button
                    android:id="@+id/write"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_radius_sign_btn"
                    android:text="确定"/>

            </LinearLayout>


        </LinearLayout>

        <RelativeLayout
            android:id="@+id/contentContainer2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_below="@id/lay"
             />


</LinearLayout>
