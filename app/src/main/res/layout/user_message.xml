<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        style="@style/top">

        <ImageView
            android:id="@+id/return_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ico_commen_back" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="个人资料"
            android:textSize="25dp"
            android:layout_marginTop="5dp"
            android:textColor="#0000CD"/>

        <Button
            android:id="@+id/modify"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:text="完成"
            android:textSize="15dp" />

    </LinearLayout>



    <FrameLayout
        android:orientation="horizontal"
        android:layout_height="110dp"
        android:layout_width="match_parent"
       >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/message_image"
            android:layout_height="70dp"
            android:layout_width="70dp"
            android:src="@mipmap/img4"
            android:layout_gravity="center"
            android:layout_centerInParent="true"/>


    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:orientation="vertical"
        android:layout_marginTop="27dp">
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#07a6e6"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageView
                android:src="@drawable/ico_sign_01"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="8dp"/>
            <TextView
                android:id="@+id/username1"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:background="@null"
                android:text="用户名"
                android:gravity="center_vertical"
                android:textColor="@android:color/darker_gray"
                android:textColorHint="@android:color/black"
                android:textSize="14sp"

                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/username2"
                android:maxLines="1"
                android:gravity="center|right"
                android:layout_marginRight="10dp"
                android:background="@null"
                />

        </LinearLayout>
        <View
            android:background="@color/UnderLine"
            android:layout_height="1px"
            android:layout_width="fill_parent"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="45dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_height="44dp"
            android:layout_width="match_parent"
            android:gravity="center">

            <ImageView
                android:layout_height="25dp"
                android:layout_width="25dp"
                android:src="@drawable/ico_sign_03"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="15dp"/>

            <TextView
                android:background="@null"
                android:layout_height="fill_parent"
                android:layout_width="wrap_content"
                android:id="@+id/Mail1"
                android:textSize="14sp"
                android:gravity="center_vertical"
                android:textColor="@android:color/darker_gray"
                android:textColorHint="@android:color/black"
                android:text="邮箱"/>
            <EditText
                android:maxLines="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/mail_1"
                android:gravity="center|right"
                android:layout_marginRight="10dp"
                android:background="@null"
                />

        </LinearLayout>
        <View
            android:background="@color/UnderLine"
            android:layout_height="1px"
            android:layout_width="fill_parent"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="45dp"/>
        <TableLayout
            android:orientation="horizontal"
            android:layout_height="44dp"
            android:layout_width="match_parent"
            android:gravity="center">
      <TableRow>
          <ImageView
              android:layout_height="25dp"
              android:layout_width="25dp"
              android:src="@mipmap/img7"
              android:layout_marginTop="2dp"
              android:layout_marginRight="8dp"
              android:layout_marginLeft="15dp"/>
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="性别"
              android:layout_marginTop="4dp"
              android:textSize="14sp"
              android:layout_marginRight="5dp"/>
          <RadioGroup
              android:id="@+id/rg"
              android:orientation="horizontal"
              android:layout_marginLeft="110dp"
              android:layout_gravity="center">
              <RadioButton
                  android:id="@+id/male"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:checked="false"
                  android:text="男" />
              <RadioButton
                  android:id="@+id/femle"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:checked="false"
                  android:text="女"/>
          </RadioGroup>



      </TableRow>
        </TableLayout>
        <View
            android:background="@color/UnderLine"
            android:layout_height="1px"
            android:layout_width="fill_parent"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="45dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_height="44dp"
            android:layout_width="match_parent"
            android:gravity="center">

            <ImageView
                android:layout_height="25dp"
                android:layout_width="25dp"
                android:src="@mipmap/img6"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="15dp"/>

            <TextView
                android:background="@null"
                android:layout_height="fill_parent"
                android:layout_width="wrap_content"
                android:id="@+id/birthday"
                android:textSize="14sp"
                android:gravity="center_vertical"
                android:textColor="@android:color/darker_gray"
                android:textColorHint="@android:color/black"
                android:text="生日"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="日期"
                android:id="@+id/riqi"
                />
            <EditText
                android:layout_marginRight="10dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:id="@+id/birthday_1"
                android:maxLines="1"
                android:gravity="center|right"
                android:inputType="numberSigned"
                android:background="@null"
                />



        </LinearLayout>

    <View
        android:background="@color/UnderLine"
        android:layout_height="1px"
        android:layout_width="fill_parent"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="45dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_height="44dp"
        android:layout_width="match_parent"
        android:gravity="left">

        <ImageView
            android:layout_height="25dp"
            android:layout_width="25dp"
            android:src="@mipmap/img4"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:background="@null"
            android:layout_height="fill_parent"
            android:layout_width="wrap_content"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:textColor="@android:color/darker_gray"
            android:textColorHint="@android:color/black"
            android:text="地址"/>
        <EditText
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/address"
            android:gravity="center|right"
            android:inputType="text"
            android:maxLines="1"
            android:background="@null"
            />

    </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#07a6e6"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_radius_sign_btn"
            android:textSize="15dp"
            android:layout_marginTop="20dp"
            android:text="保存"
            android:id="@+id/save"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>









</LinearLayout>
